<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_color"
    tools:context=".ui.HomeFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/name_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@+id/image_user"
                app:layout_constraintTop_toTopOf="@+id/image_user"
                tools:text="Erlink Halah" />

            <ImageView
                android:id="@+id/ic_bell"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="76dp"
                android:src="@drawable/ic_bell"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/name_user"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/menu_nbar"
        app:layout_constraintEnd_toEndOf="@+id/home_toolbar"
        app:layout_constraintStart_toStartOf="@+id/home_toolbar"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_for_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcViewStreams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/block_for_home"
                app:layout_constraintStart_toStartOf="@+id/block_for_home"
                app:layout_constraintTop_toTopOf="@+id/block_for_home"
                tools:itemCount="1"
                tools:listitem="@layout/stream_item" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reViewCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"

                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/rcViewStreams"
                app:layout_constraintStart_toStartOf="@+id/rcViewStreams"
                app:layout_constraintTop_toBottomOf="@+id/rcViewStreams"
                tools:itemCount="1"
                tools:listitem="@layout/category_item" />

            <TextView
                android:id="@+id/popular_event_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Popular Event"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/reViewCategory"
                app:layout_constraintTop_toBottomOf="@+id/reViewCategory" />


            <TextView
                android:id="@+id/show_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Show all"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/reViewCategory"
                app:layout_constraintTop_toBottomOf="@+id/reViewCategory" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcViewEvents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/show_all_text"
                app:layout_constraintStart_toStartOf="@+id/popular_event_text"
                app:layout_constraintTop_toBottomOf="@+id/popular_event_text"
                tools:itemCount="1"
                tools:listitem="@layout/stream_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_nbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@color/main_screen_color"
        app:menu="@menu/menu_nbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>